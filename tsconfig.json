{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true // Ensure declarations are generated
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "test"
  ]
}
